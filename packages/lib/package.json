{
  "name": "@computas/designsystem",
  "version": "0.0.6",
  "description": "The Computas design system",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/computas/designsystem.git"
  },
  "files": ["dist", "LICENSE.md", "README.md"],
  "exports": {
    ".": "./dist"
  },
  "scripts": {
    "build": "bun run build-components && bun run build-global-styles",
    "build-global-styles": "tsup global-styles.css --out-dir dist",
    "build-components": "vite build -c vite.config.ts",
    "create-icon-registry": "svg-to-ts-constants"
  },
  "dependencies": {
    "@lit/context": "^1.1.3",
    "@lit/react": "^1.0.6",
    "lit": "^3.2.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0 <20.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "svg-to-ts": "^12.0.0",
    "tsup": "^8.3.5",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0"
  },
  "svg-to-ts": {
    "srcFiles": ["components/icon/svg/*.svg"],
    "outputDirectory": "components/icon",
    "prefix": "",
    "typeName": "IconName",
    "fileName": "iconRegistry",
    "delimiter": "KEBAB",
    "interfaceName": "SVGIcon"
  }
}
