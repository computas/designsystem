{
  "name": "@computas/lib",
  "description": "The Computas design system",
  "version": "0.0.12",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/computas/designsystem.git"
  },
  "scripts": {
    "build": "bun run build-components && bun run build-global-styles",
    "build-global-styles": "tsup global-styles.css --out-dir dist",
    "build-components": "bun build.ts",
    "create-icon-registry": "svg-to-ts-constants"
  },
  "dependencies": {
    "lit": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "svg-to-ts": "^12.0.0",
    "tsdown": "^0.12.8",
    "vite": "^6.1.1"
  },
  "svg-to-ts": {
    "srcFiles": ["components/icon/svg/*.svg"],
    "outputDirectory": "components/icon",
    "prefix": "",
    "typeName": "IconName",
    "fileName": "iconRegistry",
    "delimiter": "KEBAB",
    "interfaceName": "SVGIcon"
  }
}
